{{ 'text.css' | asset_url | stylesheet_tag }}

<div class="content">
  <div class="page-width">
    {% for block in section.blocks %}
      <div class="text-container">
        <div class="text-title">{{ block.settings.title }}</div>

        <div class="text-content">{{ block.settings.text }}</div>
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
 {
  "name": "Text",
  "settings": [],
  "blocks": [{
    "type": "text",
    "name": "text-content",
    "settings": [
      {
        "type": "richtext",
        "id": "title",
        "label": "title"
      },
      {
        "type":"richtext",
        "id":"text",
        "label": "text"
      },

    ]
  }],
  "presets": [{"name": "text"}]
}
{% endschema %}
