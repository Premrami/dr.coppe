<section class="belt-banner" style="padding: 20px; background: #f5f5f5;">
  <div class="content" style="text-align: center;">
    <h2>{{ section.settings.heading }}</h2>
    <p>{{ section.settings.subtext }}</p>
    <a href="{{ section.settings.button_link }}" class="btn" style="display: inline-block; margin-top: 10px; background: #000; color: #fff; padding: 10px 20px; text-decoration: none;">
      {{ section.settings.button_label }}
    </a>
  </div>
</section>

{% schema %}
{
  "name": "Belt Banner",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Check out our new belts!"
    },
    {
      "type": "textarea",
      "id": "subtext",
      "label": "Subtext",
      "default": "High-quality leather belts available now."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Shop Belts"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "Belt Banner",
      "category": "Custom"
    }
  ]
}
{% endschema %}
